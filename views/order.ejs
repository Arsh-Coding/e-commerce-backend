<!-- views/order-history.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Order History</title>
  </head>
  <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f8f9fa;
        color: #333;
      }

      h1 {
        text-align: center;
        color: #007bff;
      }

      p {
        text-align: center;
        font-size: 1.2em;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      th, td {
        padding: 12px 15px;
        text-align: left;
        border: 1px solid #ddd;
      }

      th {
        background-color: #007bff;
        color: #fff;
        text-transform: uppercase;
        font-size: 0.9em;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      tr:hover {
        background-color: #e9ecef;
      }

      a {
        color: #007bff;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      @media (max-width: 600px) {
        table {
          font-size: 0.9em;
        }

        th, td {
          padding: 10px;
        }
      }
    </style>
  <body>
    <h1>Your Order History</h1>
    <% if (orders.length === 0) { %>
    <p>No orders found.</p>
    <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Total</th>
          <th>Status</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
        <tr>
          <td><%= order._id %></td>
          <td>$<%= order.total.toFixed(2) %></td>
          <td><%= order.status %></td>
          <td><%= order.createdAt.toLocaleDateString() %></td>
          <td>
            <a href="/orders/<%= order._id %>">Checkout</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } %>
  </body>
  
</html>
